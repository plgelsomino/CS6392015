<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivityFragment">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS"
        android:id="@+id/smsButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="sendSMS"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PHONE"
        android:id="@+id/phoneButton"
        android:layout_below="@+id/smsButton"
        android:layout_alignParentStart="true"
        android:onClick="makeCall"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WEB"
        android:id="@+id/webButton"
        android:layout_below="@+id/phoneButton"
        android:layout_alignParentStart="true"
        android:onClick="launchBrowser"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAP"
        android:id="@+id/mapButton"
        android:layout_below="@+id/webButton"
        android:layout_alignParentStart="true"
        android:onClick="launchMap"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHARE"
        android:id="@+id/shareButton"
        android:layout_below="@+id/mapButton"
        android:layout_alignParentStart="true"
        android:onClick="shareTheLove"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEW ACTIVITY"
        android:id="@+id/newActivityButton"
        android:layout_below="@+id/shareButton"
        android:layout_alignParentStart="true"
        android:onClick="newActivity"/>

</RelativeLayout>
